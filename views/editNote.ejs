
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6"> 
        <h1 class="text-center">Create a Note</h1>
        <form action="/updateNote/<%= note._id %>" method="POST" class="mt-4">
            <div class="form-group">
                <label for="title">Note Title</label>
                <input type="text" class="form-control" id="title" name="title" value="<%= note.title %>" placeholder="Enter note title" required>
            </div>
            <div class="form-group">
                <label for="content">Note Content</label>
                <textarea class="form-control" id="content" name="content"  rows="4" placeholder="Enter note content" required><%= note.content %></textarea>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Update Note</button>
        </form>
        </div>
        </div>
    </div>
 